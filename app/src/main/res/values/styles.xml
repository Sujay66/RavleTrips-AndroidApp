<resources>

    <!-- Base application theme. -->
    <style name="AppThemeDef" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="multiSliderStyle">@style/Widget.MultiSlider</item>
    </style>

    <style name="Widget.MultiSlider" parent="android:Widget">
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme1" parent="AppTheme">
        <item name ="android:windowBackground">@color/windowBackground1</item >
        <item name ="android:navigationBarColor">@color/navigationBarColor1</item >
        <item name ="android:colorPrimary">@color/colorPrimary1</item >
        <item name ="android:colorPrimaryDark">@color/colorPrimaryDark1</item >
        <item name ="android:textColorHint">@color/textColorHint1</item>
        <item name ="android:textColorPrimary">@color/textColorPrimary1</item >
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/LightSlateGray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolbarStyle">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:background">@color/colorPrimary1</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:progressBackgroundTint">@color/star_gray2</item>
        <item name="android:secondaryProgressTint">@color/Gold</item>
        <item name="android:progressTint">@color/Gold</item>
    </style>

    <style name="RatingBarSmall" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressBackgroundTint">@color/star_gray2</item>
        <item name="android:secondaryProgressTint">@color/Gold</item>
        <item name="android:progressTint">@color/Gold</item>
    </style>

    <style name="RatingBarNoParent">
        <item name="android:progressBackgroundTint">@color/star_gray2</item>
        <item name="android:secondaryProgressTint">@color/Gold</item>
        <item name="android:progressTint">@color/Gold</item>
    </style>

    <style name="textHeaderNormal" >
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
    </style>
</resources>
