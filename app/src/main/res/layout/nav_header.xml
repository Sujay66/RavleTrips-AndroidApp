<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:backgroundTint="@color/lightColor2"
    android:id="@+id/nav_header"
    android:orientation="vertical"
    android:background="@color/lightColor2"
    android:layout_height="220dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/review_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/profile_big"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/DarkOrange"
        android:layout_marginLeft="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginStart="24dp"
        android:adjustViewBounds="false"
        android:layout_marginTop="25dp"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akash Anjanappa"
        android:textSize="24sp"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:id="@+id/username"
        android:layout_below="@+id/review_image"
        android:layout_alignStart="@+id/review_image"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aanjanap@syr.edu"
        android:id="@+id/email"
        android:gravity="left"
        android:textSize="14sp"
        android:textColor="@color/Black"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/username"
        android:layout_marginBottom="10dp" />

</RelativeLayout>