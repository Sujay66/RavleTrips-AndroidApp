<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_tab"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.raveltrips.android.ravel.fragments.TabFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:minHeight="99dp"
            android:background="@color/lightColor1"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:tabSelectedTextColor="@color/textColorPrimary1"
            app:tabIndicatorHeight="5dp"
            app:tabTextColor="@color/White"
            app:tabIndicatorColor="@color/textColorPrimary1"
            app:tabPaddingStart="0dp"
            app:tabPaddingEnd="0dp"
            app:tabPadding="2dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/tab_layout"/>

    </LinearLayout>

</FrameLayout>
