<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gray_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/linearLayout3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textHeaderNormal"
            android:textColor="@color/Black"
            android:textAlignment="center"
            android:textSize="30sp"
            android:id="@+id/textView27"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:text="Love Travelling??"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textHeaderNormal"
            android:textColor="@color/gray_gradient_color"
            android:textSize="25sp"
            android:id="@+id/textView6"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:text="Create your own trip! "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:textColor="@color/gray_gradient_color"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="20dp" />

        <TextView
            android:text="Stay upto date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            style="@style/textHeaderNormal"
            android:textColor="@color/gray_gradient_color"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Push notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_gradient_color"
                android:textSize="18sp"
                android:id="@+id/textView21"
                android:layout_marginLeft="40dp" />

            <TextView
                android:text="Email notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_gradient_color"
                android:textSize="18sp"
                android:id="@+id/textView20"
                android:layout_marginLeft="40dp" />
        </LinearLayout>

        <TextView
            android:text="Easy to use"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textHeaderNormal"
            android:textColor="@color/gray_gradient_color"
            android:textSize="25sp"
            android:visibility="visible"
            android:id="@+id/textView22"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Voice Recognition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_gradient_color"
                android:textSize="18sp"
                android:id="@+id/textView23"
                android:layout_marginLeft="40dp" />

            <TextView
            android:text="GPS location assistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_gradient_color"
            android:textSize="18sp"
            android:id="@+id/textView24"
            android:layout_marginLeft="40dp" />

            <TextView
                android:text="Google Maps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_gradient_color"
                android:textSize="18sp"
                android:id="@+id/textView26"
                android:layout_marginLeft="40dp" />

            <TextView
                android:text="Camera/Gallery usage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_gradient_color"
                android:textSize="18sp"
                android:id="@+id/textView25"
                android:layout_marginLeft="40dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
